@inherits CmsWebViewPage

@{
	Layout = "_main.cshtml";

	ViewBag.BodyCssClass = "not-homepage";

	var cats = CmsPage.GetSiteCategories(10, true);
	var tags = CmsPage.GetSiteTags(10, true);
	var dates = CmsPage.GetSiteDates(12);

	var usr = CmsPage.BylineUser;
}

@section Banner {
	<!-- Banner -->
	<div id="banner">
		<div class="container">
		</div>
	</div>
	<!-- /Banner -->
}

<!-- Main -->
<div id="main">
	<div class="container">
		<div class="row">
			<div class="3u">
				@Html.Partial("_blogNav")
			</div>

			<div class="9u skel-cell-important">
				<section>
					<article>
						<header>
							<h2>@CmsPage.Heading</h2>
							<span class="byline">
								By
								@usr.FullName_FirstLast
							</span>
						</header>

						<div>
							@CarrotCakeHtml.RenderWidget("phCenterTop")
						</div>

						@CarrotCakeHtml.RenderBody(CarrotCakeHtml.TextFieldZone.TextCenter)

						<div>
							@CarrotCakeHtml.RenderWidget("phCenterBottom")
						</div>
					</article>
				</section>
				<section>
					@Html.Partial("_contactus")
				</section>
			</div>
		</div>
	</div>
</div>
<!-- Main -->