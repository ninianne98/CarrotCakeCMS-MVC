				"No": function () { cmsAlertModalClose(); },
				"Yes": function () {
					cmsMakeOKToLeave();
					window.setTimeout('location.href = \'@String.Format("{0}?versionid=", SiteFilename.PageAddEditURL)' + qs + '\'', 500);
					cmsAlertModalClose();
				}
			};

