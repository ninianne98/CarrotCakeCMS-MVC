@model DashboardInfo

@{
	ViewBag.Title = "Site Dashboard";
}

<div id="cmsDashboardIcons" class="ui-corner-all">
	<div class="ui-corner-all dashboardCell">
		<a href="@SiteFilename.SiteInfoURL">
			<img alt="" src="~/Assets/Admin/Images/SiteData.png" class="imgNoBorder" />
			<br />
			<br />
			Site Info
		</a>
	</div>
	<div class="ui-widget-header ui-corner-all dashboardCell">
		<a href="@SiteFilename.ContentImportURL">
			<img alt="" src="~/Assets/Admin/Images/ImportData.png" class="imgNoBorder" />
			<br />
			<br />
			Import Content
		</a>
	</div>
	<div class="ui-widget-header ui-corner-all dashboardCell">
		<a href="@SiteFilename.SiteExportURL">
			<img alt="" src="~/Assets/Admin/Images/ExportData.png" class="imgNoBorder" />
			<br />
			<br />
			Export Content
		</a>
	</div>
	<div class="ui-widget-header ui-corner-all dashboardCell">
		<a href="@SiteFilename.SiteTemplateUpdateURL">
			<img alt="" src="~/Assets/Admin/Images/TemplateUpdate.png" class="imgNoBorder" />
