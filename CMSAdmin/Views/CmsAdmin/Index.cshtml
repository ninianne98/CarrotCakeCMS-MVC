		<div class="ui-widget-header ui-corner-all dashboardCell">
			<a href="@SiteFilename.UserIndexURL">
				<img alt="" src="~/Assets/Admin/Images/UserList.png" class="imgNoBorder" />
				<br />
				<br />
				Users
			</a>
		</div>
		<div class="ui-widget-header ui-corner-all dashboardCell">
			<a href="@SiteFilename.RoleIndexURL">
				<img alt="" src="~/Assets/Admin/Images/GroupList.png" class="imgNoBorder" />
				<br />
				<br />
				Roles
			</a>
		</div>
	}

	<div style="clear: both;">
	</div>
