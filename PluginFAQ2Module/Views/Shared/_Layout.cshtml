<!DOCTYPE html>
@{
	Layout = null;

	string areaName = ViewBag.WidgetAssemblyName; // "CarrotCake.CMS.Plugins.FAQ2";
	string areaAlias = string.Format("{0}_Default", areaName);
}

<html>
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>@ViewBag.Title - @ViewBag.WidgetAssemblyName</title>
	@(new jquerybasic() { SelectedSkin = jquerybasic.jQueryTheme.Silver })
	@(new Bootstrap() { SelectedSkin = Bootstrap.BootstrapColorScheme.DarkRed })

	<link href="~/Content/Site.css" rel="stylesheet" type="text/css" />

	<script type="text/javascript">
		$(document).ready(function () {
			doStyles();
		});

		$(document).ajaxComplete(function (event, xhr, settings) {
			doStyles();
		});

		function doStyles() {
			$("input:button, input:submit, input:reset, button").button();
			$("input:button, input:submit, input:reset, button").addClass('btn');
		}

		function cmsPreSaveTrigger() {
			return true;
		}
	</script>

	<script src="http://localhost:10109/Assets/tinymce/tinymce.min.js?cms=5.5" type="text/javascript"></script>
	<script src="http://localhost:10109/Assets/Admin/includes/tinymce-config.js?cms=5.5" type="text/javascript"></script>

	<script type="text/javascript">
		var webSvc = 'http://localhost:10109/Assets/Admin/CMS.asmx';
		var bTinyLoaded = false;

		function cmsAjaxFailed() {
		}

		function AjaxTinyLoad() {
			if (!bTinyLoaded) {
				cmsTinyMceInit(875, 500, false);
			}
			bTinyLoaded = true;
		}

		$(document).ready(function () {
			AjaxTinyLoad();
		});

		$(document).ajaxComplete(function (event, xhr, settings) {
			AjaxTinyLoad();
		});
	</script>
</head>
<body>
	<div class="navbar navbar-inverse navbar-fixed-top">
		<div class="container">
			<div class="navbar-header">
				<button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
				</button>
				@Html.ActionLink("Widget: FAQ 2", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
			</div>
			<div class="navbar-collapse collapse">
				<ul class="nav navbar-nav">
					@using (CarrotWeb.BeginWrappedItem("li", "*", "Test", new { @class = "active" }, null)) {
						@Html.RouteLink("Test", areaAlias, new { action = "Index", controller = "Test" })
					}

					@using (CarrotWeb.BeginWrappedItem("li", "*", "Admin", new { @id = "tabAdmin", @class = "active dropdown" }, new { @id = "tabAdmin", @class = "dropdown" })) {
						<a href="#" class="dropdown-toggle" data-toggle="dropdown">Admin Test <b class="caret"></b></a>
						<ul class="dropdown-menu">
							<li>@Html.ActionLink("Database", "FaqDatabase", "Admin")</li>
							<li>@Html.ActionLink("Faq List", "Index", "Admin")</li>
							<li>@Html.ActionLink("Add Faq", "CreateFaq", "Admin")</li>
						</ul>
					}
				</ul>
			</div>
		</div>
	</div>

	<div class="container body-content">
		@RenderBody()
		<hr />
		<footer>
			<p>&copy; @DateTime.Now.Year - @ViewBag.WidgetAssemblyName</p>
		</footer>
	</div>
</body>
</html>